<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.PinEntryActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/titleBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Enter PIN Code"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pinBox0"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="15dip"
                    android:background="@drawable/back"
                    android:editable="false"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:password="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/pinBox1"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="15dip"
                    android:background="@drawable/back"
                    android:editable="false"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:password="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/pinBox2"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="15dip"
                    android:background="@drawable/back"
                    android:editable="false"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:password="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/pinBox3"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="15dip"
                    android:background="@drawable/back"
                    android:editable="false"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:password="true"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="40sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/statusMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dip"
                android:text=""
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/numericPad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="20dip"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_1_box_outline"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_2_box_outline"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_3_box_outline"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_4_box_outline"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_5_box_outline"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_6_box_outline"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_7_box_outline"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_8_box_outline"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_9_box_outline"/>

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryDark"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:onClick="number0"
                        android:src="@drawable/ic_numeric_0_box_outline"/>

                    <Button
                        android:id="@+id/deleteButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Delete"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryDark"
                        />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>